<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>CONTROLLER.Home</servlet-class>
    </servlet>
    <servlet>
        <display-name>hidden</display-name>
        <servlet-name>hidden</servlet-name>
        <jsp-file>/test .jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>AeropuertoController</servlet-name>
        <servlet-class>CONTROLLER.AeropuertoController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AerolineaController</servlet-name>
        <servlet-class>CONTROLLER.AerolineaController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmpleadoController</servlet-name>
        <servlet-class>CONTROLLER.EmpleadoController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PasajeroController</servlet-name>
        <servlet-class>CONTROLLER.PasajeroController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AeronaveController</servlet-name>
        <servlet-class>CONTROLLER.AeronaveController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VueloController</servlet-name>
        <servlet-class>CONTROLLER.VueloController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>hidden</servlet-name>
        <url-pattern>/hidden</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>CONTROLLER.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Session</servlet-name>
        <servlet-class>CONTROLLER.Session</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>CONTROLLER.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/Home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Session</servlet-name>
        <url-pattern>/Session</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AeropuertoController</servlet-name>
        <url-pattern>/Aeropuerto/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AerolineaController</servlet-name>
        <url-pattern>/Aerolinea/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmpleadoController</servlet-name>
        <url-pattern>/Empleado/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PasajeroController</servlet-name>
        <url-pattern>/Pasajero/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AeronaveController</servlet-name>
        <url-pattern>/Aeronave/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VueloController</servlet-name>
        <url-pattern>/Vuelo/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>Home</welcome-file>
    </welcome-file-list>
</web-app>
